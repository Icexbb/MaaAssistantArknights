<UserControl
    x:Class="MaaWpfGui.Views.UserControl.AfterActionUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:CalcBinding;assembly=CalcBinding"
    xmlns:controls="clr-namespace:MaaWpfGui.Styles.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="urn:gong-wpf-dragdrop"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://github.com/canton7/Stylet"
    xmlns:styles="clr-namespace:MaaWpfGui.Styles"
    xmlns:ui="clr-namespace:MaaWpfGui.ViewModels.UI"
    xmlns:viewModels="clr-namespace:MaaWpfGui.ViewModels"
    xmlns:vm="clr-namespace:MaaWpfGui"
    xmlns:userControl="clr-namespace:MaaWpfGui.Views.UserControl"
    d:DataContext="{d:DesignInstance {x:Type ui:SettingsViewModel}}"
    d:DesignWidth="220"
    MaxWidth="220"
    mc:Ignorable="d">
    <StackPanel>
        <StackPanel Visibility="{c:Binding !TaskSettingVisibilities.EnableAdvancedSettings}">
            <CheckBox Margin="0,10" IsChecked="{Binding AfterActionSetting.Once}">
                <CheckBox.Content>
                    <controls:TextBlock Text="{DynamicResource Once}" />
                </CheckBox.Content>
            </CheckBox>
            <StackPanel Orientation="Vertical" Margin="10,0,10,10">
                <controls:TextBlock Width="200" TextAlignment="Center" TextWrapping="Wrap" Text="{DynamicResource AfterActionOncePromptYes}" Visibility="{c:Binding !AfterActionSetting.Once,FalseToVisibility=Collapsed}" />
                <controls:TextBlock Width="200" TextAlignment="Center" TextWrapping="Wrap" Text="{DynamicResource AfterActionOncePromptNo}" Visibility="{c:Binding AfterActionSetting.Once,FalseToVisibility=Collapsed}" />
            </StackPanel>
            <hc:Divider />
            <CheckBox Click="CheckBox_OnClick" Margin="0,10" IsChecked="{Binding AfterActionSetting.ExitArknights}" Name="CheckBoxExitArknights">
                <CheckBox.Content>
                    <controls:TextBlock Width="195" TextWrapping="Wrap" Text="{DynamicResource ExitArknights}" />
                </CheckBox.Content>
            </CheckBox>
            <CheckBox Click="CheckBox_OnClick" Margin="0,10" IsChecked="{Binding AfterActionSetting.BackToAndroidHome}" Name="CheckBoxBackToAndroidHome">
                <CheckBox.Content>
                    <controls:TextBlock Width="195" TextWrapping="Wrap" Text="{DynamicResource BackToAndroidHome}" />
                </CheckBox.Content>
            </CheckBox>
            <CheckBox Click="CheckBox_OnClick" Margin="0,10" IsChecked="{Binding AfterActionSetting.ExitEmulator}" Name="CheckBoxExitEmulator">
                <CheckBox.Content>
                    <controls:TextBlock Width="195" TextWrapping="Wrap" Text="{DynamicResource ExitEmulator}" />
                </CheckBox.Content>
            </CheckBox>
            <CheckBox Click="CheckBox_OnClick" Margin="0,10" IsChecked="{Binding AfterActionSetting.ExitSelf}" Name="CheckBoxExitSelf">
                <CheckBox.Content>
                    <controls:TextBlock Width="195" TextWrapping="Wrap" Text="{DynamicResource ExitSelf}" />
                </CheckBox.Content>
            </CheckBox>
            <hc:Divider />
            <CheckBox Click="CheckBox_OnClick" Margin="0,10" IsChecked="{Binding AfterActionSetting.IfNoOtherMaa}" Name="CheckBoxIfNoOtherMaa">
                <CheckBox.Content>
                    <controls:TextBlock Width="195" TextWrapping="Wrap" Text="{DynamicResource IfNoOtherMaa}" />
                </CheckBox.Content>
            </CheckBox>

            <CheckBox Click="CheckBox_OnClick" Margin="0,10" IsChecked="{Binding AfterActionSetting.Hibernate}" Name="CheckBoxHibernate">
                <CheckBox.Content>
                    <controls:TextBlock Width="195" TextWrapping="Wrap" Text="{DynamicResource Hibernate}" />
                </CheckBox.Content>
            </CheckBox>
            <CheckBox Click="CheckBox_OnClick" Margin="0,10" IsChecked="{Binding AfterActionSetting.Shutdown}" Name="CheckBoxShutdown">
                <CheckBox.Content>
                    <controls:TextBlock Width="195" TextWrapping="Wrap" Text="{DynamicResource Shutdown}" />
                </CheckBox.Content>
            </CheckBox>
        </StackPanel>
    </StackPanel>
</UserControl>
