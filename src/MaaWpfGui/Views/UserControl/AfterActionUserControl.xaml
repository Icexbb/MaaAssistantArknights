<UserControl
    x:Class="MaaWpfGui.Views.UserControl.AfterActionUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:CalcBinding;assembly=CalcBinding"
    xmlns:controls="clr-namespace:MaaWpfGui.Styles.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="urn:gong-wpf-dragdrop"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://github.com/canton7/Stylet"
    xmlns:styles="clr-namespace:MaaWpfGui.Styles"
    xmlns:ui="clr-namespace:MaaWpfGui.ViewModels.UI"
    xmlns:userControl="clr-namespace:MaaWpfGui.Views.UserControl"
    xmlns:viewModels="clr-namespace:MaaWpfGui.ViewModels"
    xmlns:vm="clr-namespace:MaaWpfGui"
    MaxWidth="220"
    d:DataContext="{d:DesignInstance {x:Type ui:SettingsViewModel}}"
    d:DesignWidth="220"
    mc:Ignorable="d">
    <StackPanel>
        <StackPanel Visibility="{c:Binding !TaskSettingVisibilities.EnableAdvancedSettings}">
            <CheckBox Margin="0,10" IsChecked="{Binding AfterActionSetting.Once}">
                <CheckBox.Content>
                    <controls:TextBlock Text="{DynamicResource Once}" />
                </CheckBox.Content>
            </CheckBox>
            <StackPanel Margin="10,0,10,10" Orientation="Vertical">
                <controls:TextBlock
                    Width="200"
                    Text="{DynamicResource AfterActionOncePromptYes}"
                    TextAlignment="Center"
                    TextWrapping="Wrap"
                    Visibility="{c:Binding !AfterActionSetting.Once}" />
                <controls:TextBlock
                    Width="200"
                    Text="{DynamicResource AfterActionOncePromptNo}"
                    TextAlignment="Center"
                    TextWrapping="Wrap"
                    Visibility="{c:Binding AfterActionSetting.Once}" />
            </StackPanel>
            <hc:Divider />
            <CheckBox
                Margin="0,10"
                IsChecked="{Binding AfterActionSetting.ExitArknights}"
                Visibility="{c:Binding !(AfterActionSetting.Shutdown || AfterActionSetting.ExitEmulator)}">
                <CheckBox.Content>
                    <controls:TextBlock
                        Width="195"
                        Text="{DynamicResource ExitArknights}"
                        TextWrapping="Wrap" />
                </CheckBox.Content>
            </CheckBox>
            <CheckBox
                Margin="0,10"
                IsChecked="{Binding AfterActionSetting.BackToAndroidHome}"
                Visibility="{c:Binding !(AfterActionSetting.ExitEmulator || AfterActionSetting.Shutdown)}">
                <CheckBox.Content>
                    <controls:TextBlock
                        Width="195"
                        Text="{DynamicResource BackToAndroidHome}"
                        TextWrapping="Wrap" />
                </CheckBox.Content>
            </CheckBox>
            <CheckBox
                Margin="0,10"
                IsChecked="{Binding AfterActionSetting.ExitEmulator}"
                Visibility="{c:Binding !AfterActionSetting.Shutdown}">
                <CheckBox.Content>
                    <controls:TextBlock
                        Width="195"
                        Text="{DynamicResource ExitEmulator}"
                        TextWrapping="Wrap" />
                </CheckBox.Content>
            </CheckBox>
            <CheckBox
                Margin="0,10"
                IsChecked="{Binding AfterActionSetting.ExitSelf}"
                Visibility="{c:Binding !AfterActionSetting.Shutdown}">
                <CheckBox.Content>
                    <controls:TextBlock
                        Width="195"
                        Text="{DynamicResource ExitSelf}"
                        TextWrapping="Wrap" />
                </CheckBox.Content>
            </CheckBox>
            <hc:Divider />
            <CheckBox
                Margin="0,10"
                IsChecked="{Binding AfterActionSetting.IfNoOtherMaa}"
                Visibility="{c:Binding AfterActionSetting.Hibernate or AfterActionSetting.Shutdown}">
                <CheckBox.Content>
                    <controls:TextBlock
                        Width="195"
                        Text="{DynamicResource IfNoOtherMaa}"
                        TextWrapping="Wrap" />
                </CheckBox.Content>
            </CheckBox>

            <CheckBox
                Margin="0,10"
                IsChecked="{Binding AfterActionSetting.Hibernate}"
                Visibility="{c:Binding !AfterActionSetting.Shutdown}">
                <CheckBox.Content>
                    <controls:TextBlock
                        Width="195"
                        Text="{DynamicResource Hibernate}"
                        TextWrapping="Wrap" />
                </CheckBox.Content>
            </CheckBox>
            <CheckBox
                Margin="0,10"
                IsChecked="{Binding AfterActionSetting.Shutdown}"
                Visibility="{c:Binding !AfterActionSetting.Hibernate}">
                <CheckBox.Content>
                    <controls:TextBlock
                        Width="195"
                        Text="{DynamicResource Shutdown}"
                        TextWrapping="Wrap" />
                </CheckBox.Content>
            </CheckBox>
        </StackPanel>
    </StackPanel>
</UserControl>
